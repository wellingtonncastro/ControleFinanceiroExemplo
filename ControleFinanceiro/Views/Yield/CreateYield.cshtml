@model ControleFinanceiro.Models.ViewModels.Yield.CreateYieldFormViewModel

@{
    ViewData["Title"] = "CreateYield";
}

<section class="container">
    <h1 class="text-center">Adicionar Receita</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateYield">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <input asp-for="Descricao" class="form-control" placeholder="Salário, 13º Salário, etc" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" placeholder="990.00"/>
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-warning" />
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}