@model ControleFinanceiro.Models.ViewModels.User.ForgotPasswordFormViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}

    <section>
        <h1 class="text-center">Esqueci minha senha!</h1>
        <div class="col-md-12 ">
            <form asp-action="ForgotPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">

                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" id="Email" class="form-control Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                </div>

                <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-outline-warning" />
                </div>
            </form>
        </div>
    </section>