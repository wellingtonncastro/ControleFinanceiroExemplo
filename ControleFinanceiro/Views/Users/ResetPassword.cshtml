@model ControleFinanceiro.Models.ViewModels.User.ResetPasswordFormViewModel
@{
    ViewData["Title"] = "ResetPassword";
}

    <section>
        <h1>Resetar senha</h1>

        <div class="col-md-12 ">
            <form asp-action="ResetPassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="Token" class="form-control" type="hidden" />
                <input asp-for="Email" class="form-control" type="hidden" />

                <div class="form-group">
                    <label asp-for="PasswordHash" class="control-label"></label>
                    <input asp-for="PasswordHash" id="password" class="form-control" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPasswordHash" class="control-label"></label>
                    <input asp-for="ConfirmPasswordHash" id="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <input type="submit" value="Enviar" class="btn btn-outline-warning" />
                </div>
            </form>
        </div>

    </section>

