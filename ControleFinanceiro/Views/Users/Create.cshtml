@model ControleFinanceiro.Models.ViewModels.User.CreateUserFormViewModel
@{
    ViewData["Title"] = "Create";
}

<section class="container">
    <h2 class="text-center">Dados para o cadastro</h2>

    <hr />

    <div class="row">
        <div class="col-md-12 ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label class="control-label"> Apelido para a família: </label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Quantidades de moradores na casa: </label>
                    <input asp-for="QuantidadeMembroFamilia" class="form-control Email" min="0"/>
                    <span asp-validation-for="QuantidadeMembroFamilia" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label"> Senha: </label>
                    <input asp-for="PasswordHash" id="Password" class="form-control Email" />
                    <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="control-label">Confirmar senha:</label>
                    <input asp-for="ConfirmPasswordHash" class="form-control" />
                    <span asp-validation-for="ConfirmPasswordHash" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-warning" />
                </div>
            </form>
        </div>
    </div>




</section>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


